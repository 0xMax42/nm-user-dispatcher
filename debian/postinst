#!/bin/bash
set -e

# Automatically added by dh_installsystemduser
if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ]; then
	if [ -z "$DPKG_ROOT" ]; then
		# The following line should be removed in trixie or trixie+1
		deb-systemd-helper --user unmask 'nm-user-dispatcher.service' >/dev/null || true

		# was-enabled defaults to true, so new installations run enable.
		if deb-systemd-helper --quiet --user was-enabled 'nm-user-dispatcher.service'; then
			# Enables the unit on first installation, creates new
			# symlinks on upgrades if the unit file has changed.
			deb-systemd-helper --user enable 'nm-user-dispatcher.service' >/dev/null || true
		else
			# Update the statefile to add new symlinks (if any), which need to be
			# cleaned up on purge. Also remove old symlinks.
			deb-systemd-helper --user update-state 'nm-user-dispatcher.service' >/dev/null || true
		fi
	fi
fi
# End automatically added section


###############################################################################
# Custom global enable for all users
###############################################################################
if [ "$1" = "configure" ] && [ -z "$DPKG_ROOT" ]; then
	if command -v systemctl >/dev/null 2>&1; then
		echo "Enabling nm-user-dispatcher.service globally for all users..."
		systemctl enable --global nm-user-dispatcher.service >/dev/null 2>&1 || true
	fi
fi

exit 0
